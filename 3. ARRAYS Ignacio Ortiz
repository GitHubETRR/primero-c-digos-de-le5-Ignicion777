#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM 50

int contarMayor(int vec[], int tam) {
    int mayor = vec[0];
    int contador = 0;

    for (int i = 1; i < tam; i++) {
        if (vec[i] > mayor) {
            mayor = vec[i];
        }
    }

    for (int i = 0; i < tam; i++) {
        if (vec[i] == mayor) {
            contador++;
        }
    }

    return contador;
}

int main() {
    int vec[TAM];
    srand(time(NULL)); 

    for (int i = 0; i < TAM; i++) {
        vec[i] = rand() % 11 + 10; 
    }

    printf("Vector generado:\n");
    for (int i = 0; i < TAM; i++) {
        printf("%d ", vec[i]);
    }

    int repeticiones = contarMayor(vec, TAM);
    printf("\n\nEl mayor valor se repite %d veces.\n", repeticiones);

    return 0;
}
