#include <stdio.h>

int main() {
    int n; 
    printf("Ingrese el tama√±o de los vectores: ");
    scanf("%d", &n);

    int A[n], B[n];
    int producto = 0; 

    printf("Ingrese los elementos del vector A:\n");
    for (int i = 0; i < n; i++) {
        printf("A[%d]: ", i);
        scanf("%d", &A[i]);
    }

    printf("Ingrese los elementos del vector B:\n");
    for (int i = 0; i < n; i++) {
        printf("B[%d]: ", i);
        scanf("%d", &B[i]);
    }
    for (int i = 0; i < n; i++) {
        producto += A[i] * B[i];
    }

    printf("El producto escalar de los dos vectores es: %d\n", producto);

    return 0;
}
