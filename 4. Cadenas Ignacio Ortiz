#include <stdio.h>

void Invertir(char *orig, char *dest) {
    int largo = 0;
    while (orig[largo] != '\0')
        largo++;

    int fin = largo - 1;

    for (int i = 0; i < largo; i++) {
        dest[i] = orig[fin - i];
    }

    dest[largo] = '\0';
}

int main() {
    char texto[200];
    char invertida[200];

    printf("Ingrese un texto: ");
    scanf(" %[^\n]", texto);

    Invertir(texto, invertida);

    printf("Cadena invertida: %s\n", invertida);

    return 0;
}
