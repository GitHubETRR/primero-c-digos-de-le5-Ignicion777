#include <stdio.h>

// Invierte el texto original y lo guarda en otro
void Invertir(char *orig, char *dest) {
    int largo = 0;                     // Para contar cuántos caracteres hay

    while (orig[largo] != '\0')        // Recorre hasta el final del texto
        largo++;                       // Va sumando caracteres

    int fin = largo - 1;               // Última posición del texto

    for (int i = 0; i < largo; i++)    // Recorre la cadena
        dest[i] = orig[fin - i];       // Copia los caracteres al revés

    dest[largo] = '\0';                // Cierra la cadena invertida
}

int main() {
    char texto[200];       // Almacena el texto ingresado
    char invertida[200];   // Almacena el texto invertido

    printf("Ingrese un texto: ");
    scanf(" %[^\n]", texto);   

    Invertir(texto, invertida); // Invierte la cadena

    printf("Cadena invertida: %s\n", invertida);
}
